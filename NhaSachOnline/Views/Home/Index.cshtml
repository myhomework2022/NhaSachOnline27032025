@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Xin chào đến với Nhà Sách Online</h1>
</div>
<div class="my-2">
    <form action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="theLoaiID">
                Search
            </label>
            <div class="input-group">
                <input type="text" class="form-control" id="theLoaiID" name="theLoaiID" placeholder="Search..." aria-label="Search">
            </div>
        </div>
        <div class="col-12">
            <label class="visually-hidden" for="">
                Thể Loại
            </label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Thể loại.....</option>
                <option value="1">Fantasy</option>
                <option value="2">Kinh dị</option>
                <option value="3">Romance</option>
                <option value="3">Khoa học viễn tưởng</option>
            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" class="btn btn-dark">Trở lại trang home</a>
        </div>
    </form>
</div>
